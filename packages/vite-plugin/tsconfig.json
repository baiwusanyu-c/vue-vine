{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "customConditions": ["dev"]
  },
  "include": [
    "src",
    "test",
    "index.ts",
    "../../types/shims.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
